<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_7"
>

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/raleway"
        android:gravity="center"
        android:text="@string/owls_text"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold"
       app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imglogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="tv_welcome"
        app:layout_constraintStart_toStartOf="tv_welcome"
        app:layout_constraintTop_toBottomOf="@id/tv_welcome"
        android:contentDescription="image_logo" />


    <TextView
        android:id="@+id/tveslogan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/raleway"
        android:text="Compra con inteligencia en Owls Emporium, el mercado estudiantil"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@id/imglogo"
        app:layout_constraintStart_toStartOf="@id/imglogo"
        app:layout_constraintTop_toBottomOf="@id/imglogo"
        android:gravity="center"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_go_to_login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/colorbackgroundprimary"
        android:text="Iniciar Sesion"
        android:textColor="@color/white"
        android:fontFamily="@font/raleway"
        android:background="@drawable/et_custom"
        app:layout_constraintEnd_toEndOf="@id/tveslogan"
        app:layout_constraintStart_toStartOf="@id/tveslogan"
        app:layout_constraintTop_toBottomOf="@id/tveslogan"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textSize="15sp"
        app:icon="@drawable/icon_login"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_go_to_register"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Registrate"
        app:backgroundTint="@color/colorbackgroundprimary"
        app:icon="@drawable/a"
        android:textColor="@color/white"
        android:fontFamily="@font/raleway"
        android:background="@drawable/et_custom"
        app:layout_constraintEnd_toEndOf="@id/bt_go_to_login"
        app:layout_constraintStart_toStartOf="@id/bt_go_to_login"
        app:layout_constraintTop_toBottomOf="@id/bt_go_to_login"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:textSize="15sp"
        />





</androidx.constraintlayout.widget.ConstraintLayout>