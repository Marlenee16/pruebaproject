<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginFragment">


    <TextView
        android:id="@+id/tv_register_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway"
        android:gravity="center"
        android:text="Registrate"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        android:background="@color/colorbackgroundprimary"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imglogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_register_text" />


    <TextView
        android:id="@+id/tv_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_login_elements"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/raleway"
        android:gravity="center"
        android:text="Complete la informacion solicitada:"
        android:textSize="@dimen/tv_login_size"
        app:layout_constraintEnd_toEndOf="@id/imglogo"
        app:layout_constraintStart_toStartOf="@id/imglogo"
        app:layout_constraintTop_toBottomOf="@id/imglogo" />

    <EditText
        android:id="@+id/input_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="E-mail"
        android:background="@drawable/et_custom"
        android:textSize="@dimen/et_login_size"
        android:fontFamily="@font/raleway"
        android:inputType="textEmailAddress"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="@dimen/margin_login_elements"
        android:layout_marginTop="@dimen/margin_top_login_elements"
        android:paddingLeft="@dimen/margin_login_elements"
        app:layout_constraintEnd_toEndOf="@id/tv_complete"
        app:layout_constraintStart_toStartOf="@id/tv_complete"
        app:layout_constraintTop_toBottomOf="@id/tv_complete" />

    <EditText
        android:id="@+id/input_name_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Nombre"
        android:background="@drawable/et_custom"
        android:textSize="@dimen/et_login_size"
        android:fontFamily="@font/raleway"
        android:inputType="textPersonName"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="@dimen/margin_login_elements"
        android:layout_marginTop="@dimen/margin_top_login_elements"
        android:paddingLeft="@dimen/margin_login_elements"
        app:layout_constraintEnd_toEndOf="@id/input_email"
        app:layout_constraintStart_toStartOf="@id/input_email"
        app:layout_constraintTop_toBottomOf="@id/input_email" />

    <EditText
        android:id="@+id/input_last_name_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Apellido"
        android:background="@drawable/et_custom"
        android:textSize="@dimen/et_login_size"
        android:fontFamily="@font/raleway"
        android:inputType="textPersonName"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="@dimen/margin_login_elements"
        android:layout_marginTop="@dimen/margin_top_login_elements"
        android:paddingLeft="@dimen/margin_login_elements"
        app:layout_constraintEnd_toEndOf="@id/input_name_register"
        app:layout_constraintStart_toStartOf="@id/input_name_register"
        app:layout_constraintTop_toBottomOf="@id/input_name_register" />

    <EditText
        android:id="@+id/input_phone_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Telefono"
        android:background="@drawable/et_custom"
        android:textSize="@dimen/et_login_size"
        android:fontFamily="@font/raleway"
        android:inputType="phone"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="@dimen/margin_login_elements"
        android:layout_marginTop="@dimen/margin_top_login_elements"
        android:paddingLeft="@dimen/margin_login_elements"
        app:layout_constraintEnd_toEndOf="@id/input_last_name_register"
        app:layout_constraintStart_toStartOf="@id/input_last_name_register"
        app:layout_constraintTop_toBottomOf="@id/input_last_name_register" />

    <EditText
        android:id="@+id/input_password_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Contraseña"
        android:background="@drawable/et_custom"
        android:textSize="@dimen/et_login_size"
        android:fontFamily="@font/raleway"
        android:inputType="textPassword"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="@dimen/margin_login_elements"
        android:layout_marginTop="@dimen/margin_top_login_elements"
        android:paddingLeft="@dimen/margin_login_elements"
        app:layout_constraintEnd_toEndOf="@id/input_phone_register"
        app:layout_constraintStart_toStartOf="@id/input_phone_register"
        app:layout_constraintTop_toBottomOf="@id/input_phone_register" />

    <EditText
        android:id="@+id/input_confirm_password_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Confirmar contraseña"
        android:background="@drawable/et_custom"
        android:textSize="@dimen/et_login_size"
        android:fontFamily="@font/raleway"
        android:inputType="textPassword"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="@dimen/margin_login_elements"
        android:layout_marginTop="@dimen/margin_top_login_elements"
        android:paddingLeft="@dimen/margin_login_elements"
        app:layout_constraintEnd_toEndOf="@id/input_password_register"
        app:layout_constraintStart_toStartOf="@id/input_password_register"
        app:layout_constraintTop_toBottomOf="@id/input_password_register" />


    <Button
        android:id="@+id/btn_go_to_register"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginLeft="@dimen/margin_login_elements"
        android:layout_marginTop="16dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/colorbackgroundprimary"
        android:text="Registrarse"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/input_confirm_password_register"
        app:layout_constraintHorizontal_bias="0.109"
        app:layout_constraintStart_toStartOf="@id/input_confirm_password_register"
        app:layout_constraintTop_toBottomOf="@id/input_confirm_password_register" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_go_to_login"
        app:icon="@drawable/icon_close"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginLeft="@dimen/margin_login_elements"
        android:layout_marginTop="16dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/colorbackgroundprimary"
        android:gravity="center"
        android:text="cerrar"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/input_confirm_password_register"
        app:layout_constraintHorizontal_bias="0.81"
        app:layout_constraintStart_toStartOf="@id/btn_go_to_register"
        app:layout_constraintTop_toBottomOf="@id/input_confirm_password_register" />


</androidx.constraintlayout.widget.ConstraintLayout>